  "manifest_version": 2,

  "name": "Cookie Clicker Helper",
  "description": "This extension makes various Cookie Clicker functions easier.",
  "version": "0.1",
  
  "content_scripts": [
  	{
  		"matches": ["http://orteil.dashnet.org/cookieclicker/"],
  		"js": ["cookieDataGrabber.js"],
  		"run_at": "document_idle"
  	}
  ],
  
  "background": {
	"page": "background.html"
  },
  
  "permissions": [
    "tabs","http://orteil.dashnet.org/cookieclicker/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}